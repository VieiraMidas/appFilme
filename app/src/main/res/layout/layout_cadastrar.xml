<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity_cadastrar">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPreta"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_perfil" />

        <EditText
            android:id="@+id/edtNomeUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/circulo"
            android:gravity="center"
            android:hint="Nome de UsuÃ¡rio"
            android:textColor="@color/colorBranca"
            android:textColorHint="@color/colorBrancaDesbotado"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/circulo"
            android:gravity="center"
            android:hint="Email"
            android:textColor="@color/colorBranca"
            android:textColorHint="@color/colorBrancaDesbotado"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/edtSenha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/circulo"
            android:gravity="center"
            android:hint="Senha"
            android:textColor="@color/colorBranca"
            android:textColorHint="@color/colorBrancaDesbotado"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/edtConfirmarSenha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/circulo"
            android:gravity="center"
            android:hint="Confirme a Senha"
            android:textColor="@color/colorBranca"
            android:textColorHint="@color/colorBrancaDesbotado"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btnCadastrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Cadastrar" />

    </LinearLayout>

</LinearLayout>