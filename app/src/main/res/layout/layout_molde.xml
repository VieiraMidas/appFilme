<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPreta"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/totoro" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtNomeFilme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Meu Amigo Totoro"
                android:textColor="@color/colorAmarelo"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtGenero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Animação / Fantasia"
                android:textColor="@color/colorAmarelo"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txtSinopse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sinopse:"
                android:textColor="@color/colorAmarelo"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txtSinopseConteudo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="As irmãs Satsuki e Mei se mudam para o campo para ficar mais perto do hospital onde sua mãe está internada. Lá conhecem os Totoros, adoráveis criaturas místicas e alegres, que só podem ser vistas pelas crianças. Com eles, as duas irmãs viverão mágicas aventuras no campo."
                android:textColor="@color/colorBrancaDesbotado"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/txtAno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1995"
                android:textColor="@color/colorAmarelo"
                android:layout_gravity="end"
                android:textSize="13sp" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>